<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rob.kostka.MainActivity"
    android:background="@drawable/background">


    <Button
        android:id="@+id/siedem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="siedem"
        android:text="@string/jedna"
        android:layout_marginTop="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dwie"
        android:onClick="dwa"
        android:layout_below="@+id/siedem"
        android:layout_alignRight="@+id/siedem"
        android:layout_alignEnd="@+id/siedem"
        android:layout_alignLeft="@+id/siedem"
        android:layout_alignStart="@+id/siedem" />

</RelativeLayout>
